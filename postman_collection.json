{
  "info": {
    "name": "project_flask API",
    "description": "Postman collection with key endpoints for auth, profile, and admin user management.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" },
    { "key": "adminEmail", "value": "admin@example.com" },
    { "key": "adminPassword", "value": "AdminPass123!" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" },
    { "key": "userId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPassword}}\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
          },
          "response": []
        },
        {
          "name": "Refresh (Bearer or cookie)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{refreshToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/auth/refresh", "host": ["{{baseUrl}}"], "path": ["api","auth","refresh"] }
          },
          "response": []
        },
        {
          "name": "Logout (revoke current refresh)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{refreshToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/auth/logout", "host": ["{{baseUrl}}"], "path": ["api","auth","logout"] }
          },
          "response": []
        },
        {
          "name": "Logout All (requires access token)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/auth/logout_all", "host": ["{{baseUrl}}"], "path": ["api","auth","logout_all"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Me",
      "item": [
        {
          "name": "Get profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/me", "host": ["{{baseUrl}}"], "path": ["api","me"] }
          },
          "response": []
        },
        {
          "name": "Update profile",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"display_name\": \"Admin\",\n  \"first_name\": \"Admin\",\n  \"last_name\": \"User\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/me", "host": ["{{baseUrl}}"], "path": ["api","me"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Users",
      "item": [
        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"temp_password\": \"UserPass123!\",\n  \"roles\": [\"standard\"],\n  \"profile\": { \"display_name\": \"New User\" }\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/admin/users", "host": ["{{baseUrl}}"], "path": ["api","admin","users"] }
          },
          "response": []
        },
        {
          "name": "List users (pagination & filters)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users?page=1&per_page=25",
              "host": ["{{baseUrl}}"],
              "path": ["api","admin","users"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "per_page", "value": "25" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get user",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/admin/users/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api","admin","users","{{userId}}"] }
          },
          "response": []
        },
        {
          "name": "Patch user (admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"updated@example.com\",\n  \"roles\": [\"standard\"],\n  \"is_active\": true\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/admin/users/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api","admin","users","{{userId}}"] }
          },
          "response": []
        },
        {
          "name": "Ban user",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"reason\": \"Violation of rules\" }"
            },
            "url": { "raw": "{{baseUrl}}/api/admin/users/{{userId}}/ban", "host": ["{{baseUrl}}"], "path": ["api","admin","users","{{userId}}","ban"] }
          },
          "response": []
        },
        {
          "name": "Unban user",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/admin/users/{{userId}}/unban", "host": ["{{baseUrl}}"], "path": ["api","admin","users","{{userId}}","unban"] }
          },
          "response": []
        }
      ]
    }
  ]
}
