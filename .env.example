# Flask
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
SECRET_KEY=dev-secret-change-me

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database
# SSL mode is configured in project_flask/config.py
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres

# App
FLASK_ENV=production
SECRET_KEY=change-me

# JWT (RS256 recommended) - replace with real PEM values for production
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_PEM\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYOUR_PUBLIC_KEY_PEM\n-----END PUBLIC KEY-----"

# Token lifetimes (seconds)
JWT_ACCESS_EXPIRES_SECONDS=900
JWT_REFRESH_EXPIRES_SECONDS=2592000

# Refresh cookie settings
REFRESH_COOKIE_NAME=refresh_token
REFRESH_COOKIE_SECURE=false
REFRESH_COOKIE_SAMESITE=Lax

# Pagination
DEFAULT_PER_PAGE=25
MAX_PER_PAGE=200

# Misc
FORCE_HTTPS=false

# Admin User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass123!
